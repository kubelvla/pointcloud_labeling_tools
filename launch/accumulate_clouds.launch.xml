<launch>
    <node
            pkg="pointcloud_labeling_tools"
            exec="pointcloud_accumulator"
            name="pointcloud_accumulator"
            output="screen">

        <!-- Parameters -->
        <param name="input_topic" value="/labeled_cloud"/>
        <param name="output_topic" value="/assembled_cloud"/>
        <param name="fixed_frame" value="map"/>
        <param name="trigger_mode" value="max_count"/>  <!-- max_count or max_distance -->
        <param name="trigger_threshold" value="1.0"/>    <!-- 1.0 meters or 10.0 frames (must be float, we round it) -->
        <param name="output_frame" value=""/>    <!-- if empty or not defined, cloud left in the fixed frame -->
        <param name="save_output_folder" value="/tmp/pcd_dump"/>    <!-- if empty or not defined, clouds not saved -->
        <param name="skip_factor" value="4"/>  <!-- if zero, nothing skipped -->

        <param name="use_sim_time" value="true"/>


    </node>
</launch>